<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context="helix.profitkey.hotelapp.Login">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="4" >
        <!----><include layout="@layout/status_bar"/>
        <LinearLayout
            android:layout_weight=".7"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SIGNIN"
                android:textSize="30dp"
                android:textColor="@color/font_brown"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>
        <ImageView
            android:layout_weight="1"
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/logopk"/>
        <EditText
            android:layout_weight=".6"
            android:id="@+id/uname"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/edittext_brown_line"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:gravity="center_horizontal|bottom"
            android:padding="@dimen/margin_7dp"
            android:imeOptions="flagNoExtractUi"
            android:textSize="@dimen/text_normal"
            android:hint="Username"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890._@"
            android:maxLength="55"

            android:textColor="@color/font_brown">
        </EditText>
        <EditText
            android:layout_weight=".6"
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/edittext_brown_line"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:layout_marginBottom="@dimen/margin_35dp"
            android:maxLength="55"
            android:inputType="textPassword"
            android:singleLine="true"
            android:gravity="center_horizontal|bottom"
            android:padding="@dimen/margin_7dp"
            android:imeOptions="flagNoExtractUi"
            android:textSize="@dimen/text_normal"

            android:hint="Password"
            android:textColor="@color/font_brown"/>
        <!--    android:text="abi"
                android:text="123" -->
        <Button
            android:layout_weight=".4"
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="@dimen/_4sdp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:text="Sign In"
            android:textSize="21dp"
            android:textColor="@color/white"
            android:background="@drawable/press_button_statusbar_color"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_weight=".7"
            android:layout_width="fill_parent"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textColor="@color/font_brown" />
            <Button
                android:id="@+id/btn_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_7dp"
                android:text="Sign Up!"
                android:textSize="21dp"
                android:textColor="@color/font_brown_dark"
                android:background="@drawable/press_button_with_bg_color"
                android:layout_gravity="center"/>

        </LinearLayout>

</LinearLayout>
</RelativeLayout>