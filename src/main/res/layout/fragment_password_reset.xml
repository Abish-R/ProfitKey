<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/margin_100dp"
    android:layout_marginLeft="@dimen/margin_20dp"
    android:layout_marginRight="@dimen/margin_20dp"
    tools:context="fragments.PasswordResetFragment">
    <EditText
        android:id="@+id/old_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_7dp"
        android:hint="Old password"
        android:background="@drawable/edittext_brown_line"
        android:maxLength="20"
        android:singleLine="true"
        android:inputType="textPassword"
        android:textColor="@color/font_brown"
        android:textSize="@dimen/text_nrml_18dp"/>
    <EditText
        android:id="@+id/new_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_7dp"
        android:hint="New password"
        android:background="@drawable/edittext_brown_line"
        android:maxLength="20"
        android:singleLine="true"
        android:inputType="textPassword"
        android:textColor="@color/font_brown"
        android:textSize="@dimen/text_nrml_18dp"/>
    <EditText
        android:id="@+id/cnfm_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_7dp"
        android:layout_marginBottom="@dimen/margin_20dp"
        android:hint="Confirm password"
        android:background="@drawable/edittext_brown_line"
        android:maxLength="20"
        android:singleLine="true"
        android:inputType="textPassword"
        android:textColor="@color/font_brown"
        android:textSize="@dimen/text_nrml_18dp"/>
    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/press_button_violet_circle"
        android:textColor="@color/white"
        android:text="Ok"/>

</LinearLayout>
