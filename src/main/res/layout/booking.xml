<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="helix.profitkey.hotelapp.Booking"
    android:id="@+id/rel_layout">
    <!--include layout="@layout/status_bar"/-->
    <LinearLayout
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/status_bar"/>
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/status_biscuit"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_nrml_18dp"
                android:id="@+id/toolbar_title" />

        </android.support.v7.widget.Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_marginTop="@dimen/margin_7dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="25dp"
            android:text="Offer Title"
            android:id="@+id/title" />
        <ScrollView
            android:id="@+id/scrollview"
            android:layout_weight="1.79"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_7dp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:layout_marginRight="@dimen/margin_7dp"
                android:textSize="@dimen/text_nrml_18dp"
                android:textColor="@color/black"
                android:text="Price"
                android:id="@+id/offer_price" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_7dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_7dp"
                    android:textSize="@dimen/text_nrml_18dp"
                    android:textColor="@color/black"
                    android:text="Tax"
                    android:id="@+id/tax" />
                <LinearLayout
                    android:id="@+id/offer_layout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:layout_marginLeft="@dimen/margin_20dp"
                        android:layout_marginRight="@dimen/margin_7dp"
                        android:textSize="@dimen/text_nrml_18dp"
                        android:textColor="@color/black"
                        android:text="Room Type"
                        android:id="@+id/room_type" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_7dp"
                        android:layout_marginLeft="@dimen/margin_20dp"
                        android:layout_marginRight="@dimen/margin_7dp"
                        android:textSize="@dimen/text_nrml_18dp"
                        android:textColor="@color/black"
                        android:text="Validity"
                        android:id="@+id/validy" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_20dp"
                        android:layout_marginRight="@dimen/margin_7dp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_1sdp"
                            android:textSize="@dimen/text_nrml_18dp"
                            android:textColor="@color/black"
                            android:text="From : "
                            android:id="@+id/validity_from" />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_nrml_18dp"
                            android:gravity="right|center_vertical"
                            android:textColor="@color/black"
                            android:text="To : "
                            android:id="@+id/validity_to" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:layout_marginLeft="@dimen/margin_20dp"
                        android:layout_marginRight="@dimen/margin_7dp"
                        android:textSize="@dimen/text_nrml_18dp"
                        android:textColor="@color/black"
                        android:text="Minimum LOS: "
                        android:id="@+id/min_los" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_7dp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:layout_marginLeft="@dimen/margin_20dp"
                        android:layout_marginRight="@dimen/margin_7dp"
                        android:textColor="@color/black"
                        android:text="Offer Description"
                        android:id="@+id/description" />
                </LinearLayout>

                <!--include layout="@layout/fr_image_pager"/-->
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                    <android.support.v4.view.ViewPager
                        android:tag="one"
                        android:id="@+id/viewPagers"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginTop="@dimen/margin_7dp"/>
                    <com.viewpagerindicator.CirclePageIndicator
                        android:id="@+id/indicator"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="bottom"
                        android:padding="10dip"
                        app:centered="true"
                        app:fillColor="@color/toolbar_orange_light"
                        app:pageColor="@color/toolbar_orange"
                        app:snap="false" />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/offer_spl_layout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/inclusion_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_20dp"
                        android:layout_marginLeft="@dimen/margin_20dp"
                        android:layout_marginRight="@dimen/margin_7dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/inclusion_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/inclusion"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/_4sdp"
                            android:layout_margin="@dimen/_2sdp"
                            android:textColor="@color/black"
                            android:text="Inclusion"
                            android:id="@+id/inclusion" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/food_option_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_7dp"
                        android:layout_marginLeft="@dimen/margin_20dp"
                        android:layout_marginRight="@dimen/margin_7dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/food_option_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/food"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/_4sdp"
                            android:layout_margin="@dimen/_2sdp"
                            android:textColor="@color/black"
                            android:text="Food Option"
                            android:id="@+id/food_option" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/event_option_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_7dp"
                        android:layout_marginLeft="@dimen/margin_20dp"
                        android:layout_marginRight="@dimen/margin_7dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/event_option_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/events"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/_4sdp"
                            android:layout_margin="@dimen/_2sdp"
                            android:textColor="@color/black"
                            android:text="Event"
                            android:id="@+id/event_option" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/room_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_7dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_7dp"
                    android:textColor="@color/black"
                    android:text="Very good spacious room"/>

                <LinearLayout
                    android:id="@+id/fan_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_7dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/fan_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/fan"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/_4sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:textColor="@color/black"
                        android:text="Fan"
                        android:id="@+id/fan" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ac_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_7dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_7dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ac_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ac"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/_4sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:textColor="@color/black"
                        android:text="AC"
                        android:id="@+id/ac" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fridge_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_7dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_7dp"
