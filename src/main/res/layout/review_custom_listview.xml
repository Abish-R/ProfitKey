<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/_4sdp"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
         <TextView
             android:id="@+id/b"
             android:layout_weight="1.2"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:textSize="14dp"
             android:paddingLeft="@dimen/_1sdp"
             android:layout_marginRight="1dp"
             android:textColor="@color/black_dark1"
             android:text="TextView" />
        <!--ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lock"/-->
        <TextView
            android:id="@+id/a"
            android:layout_weight=".8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_1sdp"
            android:drawablePadding="@dimen/_4sdp"
            android:drawableLeft="@drawable/avatar_review"
            android:singleLine="true"
            android:textSize="18dp"
            android:textColor="@color/font_brown_dark"
            android:text="Abish R" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:id="@+id/cc"
            android:layout_weight=".2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_1sdp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="18dp"
            android:textColor="@color/black_dark1"
            android:text="Title:" />
         <TextView
             android:id="@+id/c"
             android:layout_weight=".8"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:textSize="19dp"
             android:textColor="@color/black"
             android:text="TextView" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:id="@+id/dd"
            android:layout_weight=".2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_1sdp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="18dp"
            android:layout_marginRight="1dp"
            android:textColor="@color/black_dark1"
            android:text="Descrip:" />
         <TextView
             android:id="@+id/d"
             android:layout_weight=".6"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:lines="2"
             android:maxLines="2"
             android:textSize="18dp"
             android:layout_marginRight="1dp"
             android:textColor="@color/black_dark1"
             android:text="TextView" /><!--android:singleLine="true"-->
        <!--Button
            android:layout_weight=".2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:textSize="@dimen/text_small_10dp"
            android:drawableLeft="@drawable/tiny"
            android:text="Edit"
            android:gravity="center"
            android:layout_gravity="right|bottom"/-->
        <TextView
            android:id="@+id/edit"
            android:layout_weight=".2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:drawableLeft="@drawable/edit_review"
            android:drawablePadding="@dimen/_3sdp"
            android:background="@drawable/press_button_transparent"
            android:singleLine="true"
            android:gravity="left|center_vertical"
            android:layout_gravity="right|bottom"
            android:textSize="@dimen/text_small_13dp"
            android:layout_marginRight="1dp"
            android:textColor="@color/font_brown_dark"
            android:text="Edit" />
    </LinearLayout>

</LinearLayout>
