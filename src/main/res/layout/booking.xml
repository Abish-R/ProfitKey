                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/_4sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:textColor="@color/black"
                        android:text="Bar"
                        android:id="@+id/bar1" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/wifi_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_7dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_7dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/wifi_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/wifi"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/_4sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:textColor="@color/black"
                        android:text="Wifi"
                        android:id="@+id/wifi" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/complement_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_7dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_7dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/complement_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/complement"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/_4sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:textColor="@color/black"
                        android:text="Complement"
                        android:id="@+id/complement" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/bed_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_7dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_7dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/bed_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/bed"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/_4sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:textColor="@color/black"
                        android:text="Bed"
                        android:id="@+id/bed" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/guest_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_7dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_7dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/guest_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/guest"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/_4sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:textColor="@color/black"
                        android:text="Guest"
                        android:id="@+id/guest" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rm_srvc_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_7dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_7dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/rm_srvc_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/room_service"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/_4sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:textColor="@color/black"
                        android:text="Room Service"
                        android:id="@+id/rm_srvc" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/restaurant_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_7dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_7dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/restaurant_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/resturant"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/_4sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:textColor="@color/black"
                        android:text="Restuarant"
                        android:id="@+id/restaurant" />
                </LinearLayout>
                <!--LinearLayout
                    android:id="@+id/restaurant_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_7dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/restaurant_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@color/teal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/_4sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:textColor="@color/black"
                        android:text="sdff"
                        android:gravity="center"
                        android:id="@+id/restaurant" />
                </LinearLayout-->
            </LinearLayout>
        </ScrollView>
        <Button
            android:layout_weight=".21"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_4sdp"
            android:textSize="@dimen/text_normal"
            android:text="Book Now"
            android:textColor="@color/white"
            android:id="@+id/confirm_booking"
            android:gravity="center"
            android:background="@drawable/press_button_rect_violet"/>
        <!--LinearLayout
            android:id="@+id/confirm_booking_layout"
            android:layout_marginTop="@dimen/_4sdp"
