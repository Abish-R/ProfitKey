<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context="helix.profitkey.hotelapp.SplashScreen">
    <include layout="@layout/status_bar"/>
    <!--TextView
        android:paddingTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" /-->
    <ImageView
        android:layout_above="@+id/text"
        android:layout_marginLeft="@dimen/margin_100dp"
        android:layout_marginRight="@dimen/margin_100dp"
        android:layout_marginTop="@dimen/margin_100dp"
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/logopk"/>
    <general.CustomTextview
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_centerInParent="true"
        android:gravity="top|center_horizontal"
        android:textColor="@color/status_biscuit"
        android:text="try it you'll like it" />
    <ImageView
        android:layout_above="@+id/text"
        android:layout_marginLeft="@dimen/margin_100dp"
        android:layout_marginRight="@dimen/margin_100dp"
        android:layout_marginTop="@dimen/margin_100dp"
        android:paddingLeft="@dimen/margin_60dp"
        android:paddingRight="@dimen/margin_60dp"
        android:id="@+id/load"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/load"/>
</LinearLayout>
